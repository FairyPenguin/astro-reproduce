  .navigation__list a {
    display: block;
    padding: 0.4rem;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .open__btn[aria-expanded='true'] + .mobile__navigation {
    translate: 0;
  }

  @media screen and (min-width: 768px) {
    /* 768*/
    .header {
      display: none;
    }

    button {
