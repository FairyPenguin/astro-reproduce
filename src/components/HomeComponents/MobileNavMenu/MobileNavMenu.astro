<style>
  button {
    all: unset;
    cursor: pointer;
  }

  .close__btn {
    margin-inline-start: auto;
    margin-block-start: 1rem;
    margin-block-end: 2rem;
  }

  .mobile__navigation {
    position: fixed;
    /* left: 0;
    top: 50px; */
    /* inset: 0; */
    display: flex;
    flex-direction: column;
    align-items: center;
    row-gap: 0.5rem;

    height: 100vh;
    width: 100%;

    /* /* justify-content: space-evenly; */
    padding: 0.4rem 0.8rem;
    /* display: none; */
    transition: 0.5s ease-in-out;
    color: black;
    background-color: var(--gray-200-color);
    overflow-y: auto;

    /* background: hsla(210, 30%, 8%, 0.85); 
    backdrop-filter: blur(8px);  */
