---
// Imports

//Props
interface Props {
  title: string
  description: string
  className: string
}

const { title, description, className } = Astro.props
---

<div class={`feature-card ${className}`}>
  <div class='feature-icon-wrapper'>
    {/* Svg Icon */}
    <slot />
  </div>
  <h3 class='feature-title'>{title}</h3>
  <p class='feature-description'>
    {description}
  </p>
</div>

<style>
  .feature-card {
    padding-inline: 1.5rem;
    padding-block: 1.5rem;
    border-radius: 0.25rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .grey-background {
    background-color: var(--gray-700-color);
    border: none;
    box-shadow: none;
  }

  .no-background {
    background-color: transparent;
    border: none;
    box-shadow: none;
  }

  .white-background {
    background-color: var(--white-clr);
    border: 1px solid var(--gray-400-color);
    box-shadow: 0 0.125rem 5px -0.0625rem #0c1a241a;
  }

  .feature-title {
    padding-top: 0.5rem;
    /* font-size: clamp(1.2rem, 50%, 1.25rem); */
    font-size: calc(var(--h3-fsz-small) - 4px);
    width: var(--heading-width);
    line-height: var(--heading-line-height);
  }

  .feature-description {
    line-height: 1.6;
    color: var(--gray-700-color);
    margin-bottom: 1rem;
    font-size: var(--p-small-fsz);
  }

  .feature-icon-wrapper {
    background-color: var(--black-clr);
    width: 48px;
    height: 48px;
    background-position: center;
    display: flex;
    border-radius: 0.25rem;
    justify-content: center;
    align-items: center;
  }

  @media screen and (max-width: 1024px) {
    .feature-card {
      padding-inline: 1rem;
      padding-block: 1rem;
    }
  }
</style>
